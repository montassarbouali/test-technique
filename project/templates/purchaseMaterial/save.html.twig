{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet"
          href="https://res.cloudinary.com/dxfq3iotg/raw/upload/v1569006288/BBBootstrap/choices.min.css?version=7.0.0">
    <link href="{{ asset('assets/css/save-purchase-material.css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
    <section>
        <div class="row">
            <div class="col-md-8">
                <h2 class="title"> Liste des achats </h2>
            </div>
            <form action="{{ path('app_save_purchase_material') }}" id="material-form" method="POST">
                <div class="row d-flex mt-100">
                    <div class="col-md-6">
                        <label>liste des clients</label>
                        <select id="choices-multiple-remove-button" name="customer_id"
                                placeholder="Select up to 3 tags">
                            {% for customer in customers %}
                                <option value="{{ customer.id }}">{{ customer.firstName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label>liste des mat√©riels</label>
                        <select id="choices-multiple-remove-button" class="material_select"
                                placeholder="Select up to 3 tags" multiple>
                            {% for material in materials %}
                                <option value="{{ material.id }}">{{ material.name }}</option>
                            {% endfor %}
                        </select>
                        <input type="hidden" name="purchase_material" value="" id="purchase_material">
                    </div>
                </div>
                <div class="card-footer">
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <button type="button" class="mb-2 btn btn-primary btn-config-save float-right"
                                id="save-material">
                            <i class="pe-7s-diskette"></i> Save
                        </button>
                    </div>
                </div>
            </form>
            <br><br>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://res.cloudinary.com/dxfq3iotg/raw/upload/v1569006273/BBBootstrap/choices.min.js?version=7.0.0"></script>
    <script type="text/javascript" src="{{ asset('assets/js/save-purchase-material.js') }}"></script>
{% endblock %}
